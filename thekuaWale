    <script>
        let cartCount = 0;
        let totalAmount = 0;

        function addToCart(price) {
            cartCount++;
            totalAmount += price;
            document.getElementById("cart-count").innerText = cartCount;
            document.getElementById("total-amount").innerText = totalAmount;
            alert("Product added to cart!");
        }
